/*SELECT FROM ORDER BY*/         	SELECT * FROM znakcom ORDER BY ID;

/*SELECT DISTINT FROM*/				SELECT DISTINCT ID, HREF, TEXT FROM znakcom ORDER BY ID;

                                    SELECT ID, INFOHREF, INFODATE_TIME, INFOTEXT FROM allsites;

/*SELECT FROM EXCEPT SELECT FROM*/  SELECT DATE_TIME FROM tvrain EXCEPT SELECT DATE_TIME FROM informkz;   
SELECT * FROM book;
SELECT id, URLHREF, datetime, text, urlimg, channal FROM sites WHERE URLHREF IN (SELECT DATETIME FROM sites GROUP BY DATETIME HAVING COUNT(TEXT) = 1);

/*SELECT FROM informkz*/            SELECT ID, URLHREF, DATETIME, TEXT, URLIMG, CHANNAL FROM informkz ORDER BY DATETIME;
SELECT * FROM informkz i1
WHERE (SELECT count(*) FROM informkz i2
WHERE i1.URLHREF = i2.URLHREF) > 1
order by DATETIME;
/*ALTER SEQUENCE RESTART*/          ALTER SEQUENCE informkz_id_seq RESTART WITH 1

/*ADD COLUMN*/                   	ALTER TABLE informkz ADD COLUMN ID SERIAL;

/*DELETE*/                        	DELETE FROM informkz WHERE CHANNAL IS NULL;

/*RENAME COLUMN*/                 	ALTER TABLE informkz RENAME COLUMN HREF TO URLHREF;

/*CHANGE DATA TYPE*/              	ALTER TABLE tablename ALTER COLUMN DATE_TIME TYPE TEXT;

/*DROP COLUMN*/                 	ALTER TABLE informkz DROP COLUMN ID;

/*DELETE DUPLICATES*/             	DELETE FROM informkz a USING informkz b WHERE a.ID > b.ID AND a.DATETIME = b.DATETIME;

/*SELECT DUPLICATES*/            	SELECT HREF, COUNT( HREF ) FROM znakcom GROUP BY HREF HAV COUNT( HREF )> 1 ORDER BY HREF;